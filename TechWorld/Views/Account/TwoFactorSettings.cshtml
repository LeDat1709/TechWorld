@model TechWorld.Controllers.TwoFactorSettingsViewModel
@{
    ViewData["Title"] = "Cài đặt xác thực hai lớp";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-3 fw-normal">
                            Cài đặt xác thực hai lớp</h2>
                            <p class="text-muted">Quản lý cài đặt bảo mật cho tài khoản của bạn</p>
                    </div>

                    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="Account" asp-action="TwoFactorSettings" method="post" class="needs-validation" novalidate>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="IsTwoFactorEnabled" name="IsTwoFactorEnabled" asp-for="IsTwoFactorEnabled">
                            <label class="form-check-label" for="IsTwoFactorEnabled">
                                Bật xác thực hai lớp (OTP qua email)
                            </label>
                        </div>

                        <div class="d-grid mb-4">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="fas fa-save me-2"></i>Lưu cài đặt
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <a asp-controller="Account" asp-action="Profile" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại hồ sơ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}